{
  "private": true,
  "name": "zai",
  "displayName": "Zai: Zig AI coding assistant",
  "version": "1.0.0",
  "description": "AI coding assistant for Zig",
  "license": "Apache-2.0",
  "publisher": "hexops",
  "homepage": "https://github.com/hexops/zai",
  "bugs": {
    "url": "https://github.com/hexops/zai/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hexops/zai"
  },
  "keywords": [
    "zai",
    "hexops",
    "openai",
    "ai",
    "assistant",
    "llm",
    "zig"
  ],
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Snippets",
    "Education",
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage",
    "onLanguage:zig",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zai-chat",
          "title": "Zai Chat",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "zai-chat": [
        {
          "type": "webview",
          "id": "zaiChatView",
          "name": "Zai Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "zai.openChat",
        "title": "Open Chat",
        "category": "Zai"
      }
    ],
    "keybindings": [
      {
        "command": "zai.openChat",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z"
      }
    ],
    "configuration": {
      "title": "Zai",
      "properties": {
        "zai.api.url": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1",
          "description": "LLM API URL (OpenAI-compatible endpoint, often ending in /v1)"
        },
        "zai.api.key": {
          "type": "string",
          "default": "",
          "description": "API Key for LLM endpoint"
        },
        "zai.api.model": {
          "type": "string",
          "default": "meta-llama/llama-3.1-70b-instruct",
          "description": "Model name to send to LLM API"
        }
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js && pnpm run package",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@langchain/community": "^0.3.3",
    "@langchain/core": "^0.3.3",
    "@langchain/openai": "^0.3.2",
    "langchain": "^0.3.2",
    "marked": "^14.1.2",
    "openai": "^4.65.0",
    "play-sound": "^1.1.6",
    "raw-loader": "^4.0.2"
  }
}