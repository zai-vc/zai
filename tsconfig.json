{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "typeRoots": ["./node_modules/@types"],
        "resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
